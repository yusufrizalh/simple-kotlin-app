<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateCourseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Theme.SimpleApplication.CustomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_color_2"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        app:title="Create New Course"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/editTxtCourseName"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:gravity="start|center"
        android:hint="Enter course name"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTxtCoursePrice"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:gravity="start|center"
        android:hint="Enter course price"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTxtCourseDuration"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:gravity="start|center"
        android:hint="Enter course duration"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTxtCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:gravity="start|center"
        android:hint="Enter course descriptiopn"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnCreateCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="8dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="8dp"
        android:text="Create"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>